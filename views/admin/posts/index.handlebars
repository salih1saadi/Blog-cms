<h1>ALL POSTS </h1>



<table class="table table-bordered">
	
   <thead>
	 <tr>
	 	<th>Id</th>
    <th>Image</th>
	 	<th>Title</th>
	 	<th>Status</th>
    <th>Category</th>
	 	<th>Allow Comments</th>
    <th>Date</th>
    <th>View post</th>
	 	

	 </tr>
   </thead>
     <tbody>

      {{#each posts}}
     	<tr>
     		<td>{{id}}</td>
        <td><img height="50" class="img-responsive" src="/uploads/{{file}}" alt=""></td>
     		<td>{{title}}</td>
     		<td>{{status}}</td>
        <td>{{category.name}}</td>
     		<td>{{allowComments}}</td>
        <td>{{generateTime date 'MMM Do YYYY'}}</td>
        <td><a href="/post/{{slug}}">View</a></td>
        <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
        <td>
          <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
          
       <button type="submit" class="btn btn-danger">Delete</button>


        </form> 

      </td>

     	</tr>
     	{{/each}}

     </tbody>
</table>