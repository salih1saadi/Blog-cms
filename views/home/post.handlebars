<div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{post.title}}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#">{{post.user.firstname}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{generateTime date 'MMM Do YYYY'}}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">

          <hr>

        <p class="lead">{{post.body}}</p>

          <hr>

          {{#if user}}

          {{#if post.allowComments}}

          <!-- Comments Form -->
          <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
              <form action="/admin/comments" method="post">
                <div class="form-group">
                  <textarea name="body" class="form-control" rows="3"></textarea>
                <input type="hidden" name="id" value="{{post.id}}">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>

          {{else}}

          <h4>Comments not allowed in this post</h4>
          <br>
          <hr>

         {{/if}}
       
         {{else}}

       <p>You need to login to comment <span><a href="/login">Login</a></span><p>
        <hr>


         {{/if}}

      {{#each post.comments}}
          <!-- Single Comment -->
          <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
              <h5 class="mt-0">{{user.firstname}}</h5>
              {{body}} 
            </div>
          </div>

          {{/each}}

          <!-- Comment with nested comments -->

        </div>

        <!-- Sidebar Widgets Column -->
       {{> home/sidebar}}

      </div>
      <!-- /.row -->
